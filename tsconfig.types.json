// https://www.typescriptlang.org/tsconfig/
{
	"extends": "./tsconfig.nodenext",
	"compilerOptions": {
		"module":"nodenext",
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		// controlled by build/lint:types scripts which both need this config
		// "emitDeclarationOnly": true,
		"noEmit": false,
		"allowJs": false,
		"skipLibCheck": true, // ignore node modules
		// preserve documentation for vue files
		"removeComments": false
	},
	"exclude": [
		"dist/**/*",
		"src/App.vue",
		"src/main.ts",
		"src/TestWrapper.vue",
		"*.ts",
		"*.cjs",
		"*.js",
		"**/*.stories.ts"
	],
	"tsc-alias": {
		"resolveFullPaths": true // for esm compatibility
	}
}
